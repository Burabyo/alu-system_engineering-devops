#!/bin/bash
# Update package lists and install Nginx if not installed
apt-get update
apt-get -y install nginx
# Define the redirection domain (Replace with your actual domain)
REDIRECT_DOMAIN="http://your-new-destination.com"
# Create an Nginx configuration for the redirection
echo "server {
    listen 80;
    server_name _;

    return 301 $REDIRECT_DOMAIN\$request_uri;
}" > /etc/nginx/sites-available/default
# Restart Nginx to apply changes
systemctl restart nginx
# Verify redirection by checking HTTP response
curl -s -o /dev/null -w "%{http_code}" http://localhost
