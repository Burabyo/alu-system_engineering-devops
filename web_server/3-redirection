#!/usr/bin/env bash
# Update package lists and install Nginx if not installed
apt-get update
apt-get -y install nginx
# Define the redirection domain (Change this to your target domain)
REDIRECT_DOMAIN="http://your-new-destination.com"
# Create an Nginx configuration file for the redirection
cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80;
    server_name _;

    return 301 $REDIRECT_DOMAIN\$request_uri;
}
EOF
# Restart Nginx to apply changes
systemctl restart nginx
